<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_large"
    android:padding="@dimen/spacing_large"
    app:cardBackgroundColor="@color/semi_background"
    app:cardCornerRadius="@dimen/search_card_corner_radius"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_default="spread"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/search"
    app:layout_constraintWidth_default="spread">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_normal"
            android:padding="@dimen/spacing_small"
            android:textColor="@color/foreground"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_product"
            app:drawableTint="@color/foreground"
            tools:text="Product name" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_normal"
            android:padding="@dimen/spacing_small"
            android:textColor="@color/foreground"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_brand"
            app:drawableTint="@color/foreground"
            tools:text="Product Brand" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_image_height"
            android:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_normal"
            android:padding="@dimen/spacing_small"
            android:textColor="@color/foreground"
            android:textSize="@dimen/text_normal"
            app:drawableStartCompat="@drawable/ic_description"
            app:drawableTint="@color/foreground"
            tools:text="product description" />

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/spacing_normal"
            android:padding="@dimen/spacing_small"
            android:textColor="@color/foreground"
            android:textSize="@dimen/text_normal"
            app:drawableStartCompat="@drawable/ic_ingredients"
            app:drawableTint="@color/foreground"
            tools:text="produt ingredients" />

    </LinearLayout>

</androidx.cardview.widget.CardView>